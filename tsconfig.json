{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
  },
  "include": [
    "./src/**/*.ts",
  ],
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.config.ts"
  ]
}
