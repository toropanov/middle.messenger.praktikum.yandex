{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "src/pages/Auth/index.ts",
    "src/consts.tsx"
  ],
  "module": "commonjs",
  "exclude": [
    "node_modules",
    "*.hbs",
    "dist"
  ]
}
